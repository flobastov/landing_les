{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block content %}

    <div>
        <h1>{{ post.title }}</h1>
        <h3>{{ post.category.name }}</h3>
        <p>{{ post.updatedAt|date }}</p>
        <div>{{ post.body|raw }}</div>
    </div>

{% endblock %}
